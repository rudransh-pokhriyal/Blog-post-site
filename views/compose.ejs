<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" placeholder="Enter a unique title">
        <label>Description</label>
        <textarea class="form-control" name="postBody" id="" cols="30" rows="5" placeholder="Enter the description"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

